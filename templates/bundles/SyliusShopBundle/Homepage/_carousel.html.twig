<div id="sylius-carousel" class="carousel slide my-5" data-ride="carousel">
    <div class="carousel-inner">
        {% for product in products %}
            {% if loop.index0 % 3 == 0 %}
            <div class="carousel-item grid {% if loop.index0 == 0 %}active{% endif %}">
                <div class="grid">
            {% endif %}
                    <div class="g-col-4">
                        {% include '@SyliusShop/Product/_box.html.twig' %}
                    </div>
            {% if loop.index % 3 == 0 or loop.last %}
                </div>
            </div>
            {% endif %}
        {% endfor %}
    </div>

    <div class="carousel-nav">
        <a class="carousel-control-prev translate-middle start-0 top-50" href="#sylius-carousel" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next translate-middle start-100 top-50" href="#sylius-carousel" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
